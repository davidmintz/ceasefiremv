{# nav routes and names are globals defined in config/packages/twig.yaml #}
<nav class="navbar navbar-expand-lg bg-body-tertiary border border-success  rounded mt-0">
    <div class="container-fluid">
        <!--  <a class="navbar-brand" href="#">CeaseFireMV</a> -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="d-md-flex d-block flex-row mx-md-auto mx-0">
            <div class="collapse navbar-collapse" id="navbarSupportedContent" id="navigation">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% for item in main_nav %}
                        <li class="nav-item">
                            <a class="nav-link{% if app.current_route == item.label %} active" aria-current="page" {% endif %}" href="{{ item.route }}">{{ item.label }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</nav>
